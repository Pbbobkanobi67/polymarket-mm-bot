# Polymarket API Credentials
# Get these from https://polymarket.com (Settings > API Keys)
POLYMARKET_API_KEY=your_api_key
POLYMARKET_API_SECRET=your_api_secret
POLYMARKET_PASSPHRASE=your_passphrase

# Wallet Configuration
# Your Ethereum private key (without 0x prefix) - KEEP THIS SECRET!
POLYMARKET_PK=your_private_key_without_0x
# Your funder/proxy wallet address from Polymarket
POLYMARKET_FUNDER=0x_your_funder_address

# Trading Mode
# Set to "false" for REAL trading with real money
PAPER_TRADING=true

# Server Configuration
PORT=8000
